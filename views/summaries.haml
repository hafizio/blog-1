- unless pages.empty?
  .stream
    - pages.each do |page|
      %article{:class => css_classes_for(page)}
        %header
          %h1
            %a{:href => url_or_permalink_for(page)}= widont(page.link_text)
            - if page.is_linked?
              &nbsp;
              %a.permalink{:href => page.permalink } #
        - if page.summary.nil? || page.summary.empty?
          ~ pipeline(page.body(self))
        - else
          ~ pipeline(page.summary)
          %p.read_more
            %a(href="#{path_to(page.abspath)}")= page.read_more
