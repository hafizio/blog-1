- if @page.date
  %section#meta
    .date= format_date(@page.date)
%section#content
  %section.breadcrumb
    %a{ :href => "/" } Home
    &raquo;
    - if @page.parent
      %a{ :href => @page.parent.abspath }= @page.parent.heading
      &raquo;
    = @page.heading
  
  = @page.metadata.repo

  ~ @page.to_html

  - unless @page.pages.empty?
    #pages
      - @page.pages.each do |page|
        = partial 'pages/summary', :locals => { :article => page, :heading => :h2 }
  
  - unless @page.articles.empty?
    #articles
      - @page.articles.each do |article|
        = partial 'pages/summary', :locals => { :article => article, :heading => :h2 }

  - unless @page.categories.empty?
    .categories
      Filed under
      - @page.categories.each do |category|
        %a{ :href => category.abspath }= category.heading

  = partial 'pages/social'
  = partial 'pages/feed', :locals => { :title => @site_title }
  = partial 'pages/comments'

%aside#sidebar
  .intro= partial 'shared/intro'
  = partial 'pages/categories'
  = partial 'pages/feed'