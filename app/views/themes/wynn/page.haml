= theme_partial 'breadcrumb'
%section#content
  ~ @page.to_html

  - unless @page.pages.empty?
    #pages
      - @page.pages.each do |page|
        = theme_partial 'summary', :locals => { :article => page, :heading => :h2 }
  
  - unless @page.articles.empty?
    #articles
      - @page.articles.each do |article|
        = theme_partial 'summary', :locals => { :article => article, :heading => :h2 }

  - unless @page.categories.empty?
    .categories
      Filed under
      - @page.categories.each do |category|
        %a{ :href => category.abspath }= category.heading

  = theme_partial 'social'
  = theme_partial 'feed', :locals => { :title => @site_title }
  = theme_partial 'comments'

%aside#sidebar
  .intro= theme_partial 'intro'
  = theme_partial 'categories'
  = theme_partial 'feed'