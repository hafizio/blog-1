= theme_partial 'breadcrumb'
%section#content
  ~ @page.to_html

  - unless @page.pages.empty?
    %ul.projects
      - @page.pages.each do |page|
        %li{:class => page.heading.downcase.dasherize }
          %h3= link_to(page.heading, page.abspath)
          = page.summary

%aside#sidebar
  = theme_partial 'branding'