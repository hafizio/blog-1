!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/css/mac_classic.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{ :href => "/fonts/wynn.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{ :href => "/css/screen.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    
    
  %body{ :class => @body_class }
    %section#top-wrap
      %header
        %ul#nav
          %li= link_to "Blog", "/blog"
          %li= link_to "Projects", "/projects"
      %section#wrapper
        = yield
    %section#middle-wrap
      %section#middle
        = yield_content :middle
    %footer
      %section.container
        %section.copyright &copy; 2009-2010 Wynn Netherland
