!!!html5
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link{ :href => "/wynn/favicon.ico", :rel => "shortcut icon" }
    %title= @title
    %link(href="/wynn/css/master.css" rel="stylesheet")
    %link(href="http://feeds.feedburner.com/wynn" rel="alternate" type="application/atom+xml")

  %body
    = haml :"shared/banner", :layout => false
    %section.container.centered(role="main")
      .row
        .three.columns
        %section.nine.columns
          = yield
      .row
        = haml :"shared/footer", :layout => false

    = haml :"shared/scripts", :layout => false
    = haml :"shared/typekit", :layout => false
